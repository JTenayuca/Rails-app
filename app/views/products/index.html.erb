
<div class = "container-fluid">
  <div class = "row">
    <% @products.each do |product| %>
    <div class = "col-sm-4 col-md-8"> <%= image_tag(product.image_url, class:"img-responsive") %>
      <h1><%= product.name %></h1>
      <p><%=product.description %></p>
      <p><%=product.color %></p>
      <p><%=product.price %></p>
      
    </div>
    <% end %>
    
    
  </div>
</div>




<br>

<%= link_to 'New Product', new_product_path %>
